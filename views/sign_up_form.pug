extends layout

block content
  h1= title
  
  form(method='POST' action='')
    div.form-group
      label(for='username') Username (Email):
      input#username.form-control(type='text', name='username' value=(undefined===user ? '' : user.username))
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', name='password')
    div.form-group
      label(for='passwordConfirmation') Password confirmation:
      input#passwordConfirmation.form-control(type='password', name='passwordConfirmation')
    div.form-group
      label(for='first_name') First name:
      input#first_name.form-control(type='text', name='first_name' value=(undefined===user ? '' : user.first_name))
    div.form-group
      label(for='family_name') Family name:
      input#family_name.form-control(type='text', name='family_name' value=(undefined===user ? '' : user.family_name)) 
    div.form-group
      label(for='admin') Admin?
      input#admin(type='checkbox' name='admin')   
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg
  
  
  
