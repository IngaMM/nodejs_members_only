extends layout

block content
  div(class='list-page')
    h1= title
    
    form(method='POST' action='')
      div.form-group
        label(for='username') Username (Email):
        input#username.form-control(type='text', name='username' value=(undefined===user ? '' : user.username))
      div.form-group
        label(for='password') Password:
        input#password.form-control(type='password', name='password')  
      button.btn.btn-primary(type='submit') Submit
      br
      br
      p.account No account yet? 
        a(href='/clubhouse/user/sign-up') Sign up      

    if errors 
     ul(class="error-list")
      for error in errors
       li!= error.msg
       
       
    
